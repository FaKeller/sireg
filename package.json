{
  "name": "sireg",
  "version": "0.2.2",
  "description": "Regression testing for websites",
  "author": "Fabian Keller <contact@fabian-keller.de>",
  "homepage": "https://github.com/FaKeller/sireg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:FaKeller/sireg.git"
  },
  "scripts": {
    "test": "jest --forceExit",
    "build": "yarn run ts:build && yarn run tslint",
    "start": "yarn run build && yarn run watch",
    "serve": "node dist/main.js",
    "serve:watch": "./node_modules/nodemon/bin/nodemon.js dist/main.js",
    "ts:build": "tsc",
    "ts:watch": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"green.bold,blue.bold\" \"yarn run ts:watch\" \"yarn run serve:watch\"",
    "package": "yarn run build && pkg dist/main.js -t node8-macos,node8-win,node8-linux -o dist/bin/sireg"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFiles": [
      "./dist/jest-setup.js"
    ]
  },
  "devDependencies": {
    "@types/colors": "^1.1.3",
    "@types/commander": "2.9.1",
    "@types/jest": "20.0.2",
    "@types/lodash": "4.14.68",
    "@types/moment": "2.13.0",
    "@types/node": "8.0.7",
    "@types/papaparse": "^4.1.30",
    "@types/request": "^2.0.0",
    "@types/strftime": "^0.9.2",
    "@types/winston": "^2.3.4",
    "ajv-cli": "^2.1.0",
    "concurrently": "3.5.0",
    "jest": "20.0.4",
    "nodemon": "1.11.0",
    "pkg": "4.1.1",
    "shelljs": "0.7.8",
    "ts-jest": "20.0.6",
    "ts-mockito": "^2.2.0",
    "tslint": "5.4.3",
    "typescript": "2.4.1"
  },
  "dependencies": {
    "ajv": "^5.2.2",
    "colors": "^1.1.2",
    "commander": "2.11.0",
    "dotenv": "4.0.0",
    "inversify": "^4.3.0",
    "lodash": "4.17.4",
    "moment": "2.18.1",
    "papaparse": "^4.3.5",
    "reflect-metadata": "^0.1.10",
    "request": "^2.81.0",
    "rxjs": "5.4.2",
    "sitemapper": "2.1.13",
    "strftime": "^0.10.0",
    "winston": "^2.3.1"
  }
}
